
    
    @import url('https://fonts.googleapis.com/css2?family=Oswald&display=swap');

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .card-text {
        margin: 16px;
        font-size: 18px;
    }

    button a{text-decoration: none;
    color: white;

    }

    .container{
        display: flex;
        flex-direction: row;
        width: 62rem;
        border: 5px;
        justify-content: center;
        /* align-items: center; */

        height: 17rem;
        margin: 50px auto;
        border-radius: 19px;
        box-shadow: 0 2px 6px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);

    }

    .time {
        margin: 16px;
        font-size: 15px;
        position: absolute;
        bottom: 10px;
    }

    .newsImage {
        height: 100%;
        width: 21rem;
        image-rendering: crisp-edges;
        border-top-left-radius: 1rem;
        border-bottom-left-radius: 1rem;
    }

    .imgContainer {
        width: 21rem;
        height: 100%;


    }

    hr {
        margin: 0 69px;
        height:0;
        background-color:grey;
    }

    .card-body {
        position: relative;
        background-color: #ecf3f5;
        border-top-right-radius: 1rem;
        border-bottom-right-radius: 1rem;
    }

    .news-head {
        text-align: center;
        margin: auto;
        font-size: 43px;
        margin-top: 0.5em;
        margin-bottom: 0.7em;
    }

    .read-more {
        position: absolute;
        right: 31px;
        bottom: 17px;
        height: 31px;
