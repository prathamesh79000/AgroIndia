.mynav {

        height: 5rem;
        width: 99vw;
        display: flex;
        flex-direction: row;

    }

    .navbar-brand {
        text-align: center;
        margin: 1.5rem 2rem;
        height: 3.5rem;
        width: 12rem;
        text-decoration: none;
        list-style: none;
        font-size: 2.3rem;
        font-weight: bold;
        margin-right: 3em;
        display: flex;
        flex-direction: row;

    }

    nav a:hover {
        color: blueviolet;
    }

    ul {
        display: flex;
        flex-direction: row;
        list-style: none;



    }

    li {
        text-align: center;
        margin: 2rem 1.5rem;
        height: 2.5rem;
        text-decoration: none;
        list-style: none;
        display: flex;
        justify-content: center;
    }

    nav a {
        text-decoration: none;
        font-size: 19px;
        font-weight: bold;
        color: black;
        font-family: 'Baloo Bhai 2', cursive;

    }


